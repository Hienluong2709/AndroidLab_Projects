<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:paddingStart="12dp"
    android:paddingEnd="12dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <TextView
        android:id="@+id/txtmaso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#00000"
        android:textStyle="bold"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/txttieude"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/txtmaso"
        android:layout_toStartOf="@+id/btnunlike"
        android:layout_alignBaseline="@id/txtmaso"
        android:layout_marginStart="12dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Tựa bài hát"
        android:textSize="16sp" />

    <!-- Trạng thái yêu thích: chỉ một trong hai hiện -->
    <ImageView
        android:id="@+id/btnunlike"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/like"
        android:src="@drawable/love" />

    <ImageView
        android:id="@+id/btnlike"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/unlike"
        android:src="@drawable/unlike"
        android:visibility="gone" />

</RelativeLayout>